echo on
setenv DEBUG "FALSE"
setenv BN_FILENAME "./bn/ex/Assign1_Q1.bif"
setenv PRUNE_PREC "-1"
setenv PRUNE_TYPE "none"
// DD_TYPE can be TABLE, ADD, AADD
setenv DD_TYPE "TABLE"
timer start
load
timer stop

// Display Bayes net DAG and print BN statistics
viz
print
print A
print B
print C

// ABC  = .1 .6 .2
// A~BC = .7 .4 .2
//
// C = .2
//
// .1 .6 .2 + .7 .4. .2
// ---
// .2
//
// .1 .6 + .7 .4 = .34

// Query #1 -- note that we should always clear variable assignments 
// since they persist -- set it to anything non-empty string other 
// than "query" or "assign", in this case I chose "ignore".
setenv A "query"
setenv C "assign:TRUE"
timer start
query
timer stop
setenv A "ignore"
setenv C "ignore"

// Query #2
setenv A "query"
setenv C "assign:FALSE"
timer start
query
timer stop
setenv A "ignore"
setenv C "ignore"

quit
